.login-form{'max-width' => '400px'}
  = simple_form_for @player do |f|
    %h2.form-heading
      Sign up


    -#  TODO Figure out how to do styling correctly. Height gets overridden by bootstrap when added to crib_players.css.scss
    .control-group
      .control-label= f.label :username
      .controls= f.text_field :username, style:'height: 25px'
    .control-group
      .control-label= f.label :email
      .controls= f.text_field :email, style:'height: 25px'
    .control-group
      .control-label= f.label :password
      .controls= f.password_field :password, style:'height: 25px'
    .control-group
      .control-label= f.label :password_confirmation
      .controls= f.password_field :password_confirmation, style:'height: 25px'

    %input.btn{:type => 'submit', :value => 'Sign up'}




